<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.mobilepresence" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mobile presence</name>
    <description>
        Un'app che memorizza le connessioni bluetooth su un database remoto
    </description>
    <author email="mirco.santosuosso@gmail.com" href="mirco.santosuosso@gmail.com">
        Mirco Santosuosso
    </author>
    <icon src="res/icon/icon.png" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
</widget>
