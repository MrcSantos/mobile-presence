<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.mobilepresence" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mobile presence</name>
    <description>
        Un'app che memorizza le connessioni bluetooth su un database remoto
    </description>
    <author email="mirco.santosuosso@gmail.com" href="mirco.santosuosso@gmail.com">
        Mirco Santosuosso
    </author>
    <icon src="res/icon/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-ble-central" spec="^1.2.2" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-uniquedeviceid" spec="^1.3.2" />
    <engine name="android" spec="^7.1.4" />
    <engine name="browser" spec="^5.0.4" />
</widget>
